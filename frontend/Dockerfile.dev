# Optimized development Dockerfile for faster builds and hot reload
FROM node:18-alpine as development

# Install dependencies for better caching
RUN apk add --no-cache libc6-compat

WORKDIR /app

# Copy package files first for better layer caching
COPY package*.json ./

# Install dependencies with better caching
RUN npm ci --prefer-offline --no-audit --no-fund --cache .npm

# Copy source code (this layer changes most frequently)
COPY . .

# Expose Vite default port
EXPOSE 5173

# Health check for development
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:5173 || exit 1

# Use exec form for better signal handling
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]

# Build stage (unchanged for now)
FROM node:18-alpine as build

WORKDIR /app
COPY package*.json ./
RUN npm ci --prefer-offline --no-audit --no-fund
COPY . .
RUN npm run build

# Production stage (unchanged for now)
FROM nginx:alpine as production
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]